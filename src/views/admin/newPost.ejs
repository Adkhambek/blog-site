<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <link href="/public/css/themes/summernote/summernote-lite.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="/public/css/dashboard.css" />
        <link
            rel="stylesheet"
            href="https://use.fontawesome.com/releases/v5.15.2/css/all.css"
            integrity="sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu"
            crossorigin="anonymous"
        />
    </head>
    <body>
        <%- include('./includes/aside.ejs', {page: 'newPost'})%>
        <main class="main">
            <%- include('./includes/header.ejs')%>
            <section class="main-box">
                <header class="top-header">
                    <h1>New Post</h1>
                    <a href="/admin/posts" class="btn">
                        <i class="fas fa-arrow-left"></i>
                        Back</a
                    >
                </header>
                <% if(successMessage.length) { %>
                <div class="alert alert-success" role="alert">
                    <p><%= successMessage %></p>
                    <button type="button" class="alert-close">
                        <span class="fas fa-times"></span>
                    </button>
                </div>
                <%} else if(errorMessage.length) {%>
                <div class="alert alert-warning" role="alert">
                    <p><%= errorMessage %></p>
                    <button type="button" class="alert-close">
                        <span class="fas fa-times"></span>
                    </button>
                </div>
                <%}%>
                <div class="form-box">
                    <form action="/admin/posts" method="post" enctype="multipart/form-data">
                        <label>
                            <p>Title:</p>
                            <input type="text" name="title" placeholder="Post title..." autocomplete="off" />
                        </label>
                        <label>
                            <p>Category:</p>
                            <select name="categoryId">
                                <% for(category of categories) { %>
                                <option value="<%= category.id%>"><%= category.name%></option>
                                <%}%>
                            </select>
                        </label>
                        <label class="file">
                            <p>Image:</p>
                            <input class="file-input" type="file" name="image" />
                            <span class="file-custom"></span>
                        </label>
                        <label>
                            <p>Content:</p>
                            <textarea id="summernote" name="content" class="content"></textarea>
                        </label>
                        <button type="submit" class="btn form-submit">Publish</button>
                    </form>
                </div>
            </section>
        </main>
        <script src="/public/js/themes/jquery/jquery-3.5.1.slim.min.js"></script>
        <script src="/public/js/themes/summernote/summernote-lite.min.js"></script>
        <script src="/public/js/dashboard.js"></script>
    </body>
</html>
